<Entity name="$projectile_default" tags="projectile_player,projectile" >

  <SpriteComponent 
    _enabled="1" 
    offset_x="0"
    offset_y="0"
    alpha="0.25"
    image_file="data/projectiles_gfx/blast.xml"
    additive="1"
     >
  </SpriteComponent>
  
	<VelocityComponent
		gravity_y="0"
		mass="0.07"
		>
	</VelocityComponent> 

  <LifetimeComponent lifetime="7200">
  </LifetimeComponent>
  
  <SpriteParticleEmitterComponent
    sprite_file="data/particles/charm.xml"
    delay="0"
    lifetime="1.5"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="10"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="3"
    emission_interval_max_frames="6"
    count_min="1" count_max="1"
    randomize_rotation.min="-0.3415"
    randomize_rotation.max="0.3415"
    randomize_angular_velocity.min="-1.3415"
    randomize_angular_velocity.max="1.3415"
    randomize_position.min_x="-28"
    randomize_position.max_x="28"
    randomize_position.min_y="-28"
    randomize_position.max_y="28"
    randomize_velocity.min_x="-10"
    randomize_velocity.max_x="10"
    randomize_velocity.min_y="-10"
    randomize_velocity.max_y="10"
    velocity_always_away_from_center="1"
    >
  </SpriteParticleEmitterComponent>

  <ProjectileComponent 
      _enabled="1" 
      penetrate_entities="1"
      collide_with_world="0"
      on_death_explode="1"
      on_death_gfx_leave_sprite="0" 
      on_lifetime_out_explode="1"
      explosion_dont_damage_shooter="1"
      on_collision_die="0"
      on_collision_remove_projectile="0"
      on_collision_spawn_entity="0"
      lifetime="9999999"
      speed_min="0"
      speed_max="0"
      damage="0.0"
      muzzle_flash_file=""
      blood_count_multiplier="0"
      shoot_light_flash_radius="0" 
      damage_game_effect_entities="data/entities/misc/effect_charm.xml,"
      play_damage_sounds="0"
	  damage_every_x_frames="15"
    	friendly_fire="1"
			collide_with_shooter_frames="0"
    >
    <config_explosion
      never_cache="1" 
      damage="0.0"
      camera_shake="0" 
      explosion_radius="1"
      explosion_sprite="data/particles/blast_out.xml" 
      explosion_sprite_emissive="1"
      explosion_sprite_additive="1"
      explosion_sprite_lifetime="0"
      physics_throw_enabled="0"
      sparks_enabled="0"
      particle_effect="0"
      hole_enabled="0" 
      stains_enabled="0"
    >
    </config_explosion>
  </ProjectileComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/field"
      set_latest_event_position="1" >
  </AudioComponent>
  
  <AudioLoopComponent
      file="data/audio/Desktop/projectiles.bank"
      event_name="player_projectiles/field/loop"
      auto_play="1" >
  </AudioLoopComponent>
  
</Entity>

